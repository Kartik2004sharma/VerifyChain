# VerifyChain Environment Variables

# =============================================================================
# WALLET CONNECT (Required)
# =============================================================================
# Get your project ID from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here

# =============================================================================
# SMART CONTRACT ADDRESSES - Sepolia Testnet
# =============================================================================
# After deploying contracts to Sepolia, update these addresses
NEXT_PUBLIC_SEPOLIA_PRODUCT_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_SEPOLIA_VERIFICATION_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_SEPOLIA_SUPPLY_CHAIN_TRACKER_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# SMART CONTRACT ADDRESSES - Ethereum Mainnet (Production)
# =============================================================================
NEXT_PUBLIC_MAINNET_PRODUCT_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_MAINNET_VERIFICATION_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_MAINNET_SUPPLY_CHAIN_TRACKER_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# RPC ENDPOINTS (Optional - uses public RPCs by default)
# =============================================================================
NEXT_PUBLIC_MAINNET_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your-infura-key

# =============================================================================
# DEPLOYMENT (For Smart Contract Deployment Only)
# =============================================================================
# NEVER commit your private key to git! Use a dedicated deployment wallet
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# =============================================================================
# RPC URLs FOR HARDHAT DEPLOYMENT
# =============================================================================
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
